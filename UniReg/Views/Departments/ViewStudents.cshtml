
@{
  Layout = "_Layout.cshtml";
}

@model UniReg.Models.Department;
@using UniReg.Models;
@using System.Collections.Generic;

<h2>Students Majoring in @Model.Name</h2>
 
@if (Model.Students.Count == 0)
{
    <p>No students are majoring in @Model.Name.</p>
}
else
{
  @foreach(Student s in Model.Students)
  {
    <p>@s.Name</p>
  }
}